{
    "name": "aligent-auth-module",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "projectType": "library",
    "sourceRoot": "packages/modules/auth/src",
    "targets": {
        "check-types": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    {
                        "command": "tsc --noEmit --pretty -p {projectRoot}/tsconfig.lib.json"
                    }
                ]
            },
            "dependsOn": [
                {
                    "projects": ["bigcommerce-graphql-module", "auth-resolvers"],
                    "target": "build"
                }
            ]
        },
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/modules/auth",
                "tsConfig": "packages/modules/auth/tsconfig.lib.json",
                "packageJson": "packages/modules/auth/package.json",
                "main": "packages/modules/auth/src/index.ts",
                "assets": [
                    "packages/modules/auth/*.md",
                    "packages/modules/auth/src/schema/*.graphql"
                ],
                "external": "none"
            },
            "dependsOn": [
                {
                    "projects": ["bigcommerce-graphql-module", "auth-resolvers"],
                    "target": "build"
                }
            ]
        },
        "publish": {
            "command": "node tools/scripts/publish.mjs aligent-auth-module {args.ver} {args.tag}",
            "dependsOn": ["build"]
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": ["{options.outputFile}"]
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "packages/modules/auth/jest.config.ts"
            },
            "dependsOn": [
                {
                    "projects": ["bigcommerce-operations"],
                    "target": "build"
                }
            ]
        }
    }
}
