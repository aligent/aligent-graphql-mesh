{
    "name": "bigcommerce-mesh",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/mesh/bigcommerce/src",
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "@nx/esbuild:esbuild",
            "outputs": ["{options.outputPath}"],
            "defaultConfiguration": "production",
            "options": {
                "platform": "node",
                "outputPath": "dist/packages/mesh/bigcommerce",
                "format": ["cjs"],
                "bundle": false,
                "main": "packages/mesh/bigcommerce/src/main.ts",
                "tsConfig": "packages/mesh/bigcommerce/tsconfig.app.json",
                "assets": ["packages/modules/bigcommerce/src/schema/**/*.graphql"],
                "generatePackageJson": true,
                "runBuildTargetDependencies": true,
                "sourcemap": true,
                "esbuildOptions": {
                    "sourcemap": true,
                    "sourcesContent": true,
                    "outExtension": {
                        ".js": ".js"
                    }
                }
            },
            "configurations": {
                "development": {},
                "production": {
                    "generateLockfile": true,
                    "esbuildOptions": {
                        "sourcemap": false,
                        "outExtension": {
                            ".js": ".js"
                        }
                    }
                }
            }
        },
        "serve": {
            "executor": "@nx/js:node",
            "defaultConfiguration": "development",
            "options": {
                "buildTarget": "bigcommerce-mesh:build",
                "runBuildTargetDependencies": true,
                "debounce": 500
            },
            "configurations": {
                "development": {
                    "buildTarget": "bigcommerce-mesh:build:development"
                },
                "production": {
                    "buildTarget": "bigcommerce-mesh:build:production"
                }
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/mesh/bigcommerce/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "packages/mesh/bigcommerce/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        },
        "docker-build": {
            "dependsOn": ["build"],
            "command": "docker build -f packages/mesh/bigcommerce/Dockerfile . -t bigcommerce-mesh"
        }
    },
    "tags": []
}
