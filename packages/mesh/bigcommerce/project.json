{
    "name": "bigcommerce-mesh",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/mesh/bigcommerce/src",
    "projectType": "application",
    "targets": {
        "serve": {
            "executor": "nx:run-commands",
            "inputs": [],
            "outputs": ["{options.outputPath}"],
            "options": {
                "cwd": "{projectRoot}",
                "command": "mesh dev",
                "runBuildTargetDependencies": true
            },
            "dependsOn": [
                {
                    "projects": ["bigcommerce-graphql-module"],
                    "target": "build"
                }
            ]
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/mesh/bigcommerce/**/*.ts"]
            }
        },
        "docker-build": {
            "dependsOn": ["build"],
            "command": "docker build -f packages/mesh/bigcommerce/Dockerfile . -t bigcommerce-mesh"
        }
    },
    "tags": []
}
