{
    "name": "bigcommerce-mesh",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/mesh/bigcommerce/src",
    "projectType": "application",
    "targets": {
        "mesh-build": {
            "executor": "nx:run-commands",
            "inputs": [],
            "outputs": ["{options.outputPath}"],
            "options": {
                "cwd": "{projectRoot}",
                "command": "mesh build --throwOnInvalidConfiguration",
                "runBuildTargetDependencies": true
            },
            "dependsOn": [
                {
                    "projects": ["bigcommerce-graphql-module", "bigcommerce-resolvers", "bigcommerce-operations"],
                    "target": "build"
                }
            ]
        },
        "serve": {
            "executor": "nx:run-commands",
            "outputs": ["{options.outputPath}"],
            "options": {
                "command": "mesh dev --dir packages/mesh/bigcommerce",
                "runBuildTargetDependencies": true
            },
            "dependsOn": [
                {
                    "projects": ["bigcommerce-resolvers", "bigcommerce-operations"],
                    "target": "codegen"
                }
            ]
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/mesh/bigcommerce/**/*.ts"]
            }
        },
        "docker-build": {
            "dependsOn": ["build"],
            "command": "docker build -f packages/mesh/bigcommerce/Dockerfile . -t bigcommerce-mesh"
        }
    },
    "tags": []
}
