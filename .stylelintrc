{
    "extends": ["@aligent/stylelint-preset", "stylelint-config-css-modules"],
    "rules": {
        "indentation": [4],
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "function",
                    "if",
                    "each",
                    "include",
                    "mixin",
                    "for"
                ]
            }
        ],
        "font-weight-notation": "numeric",
        "selector-class-pattern": "^(?:(?:o|c|u|t|s|is|has|_|js|qa)-)?[a-zA-Z0-9_]+(?:-[a-zA-Z0-9]+)*(?:__[a-zA-Z0-9]+(?:-[a-zA-Z0-9]+)*)?(?:--[a-zA-Z0-9]+(?:-[a-zA-Z0-9]+)*)?(?:\\[.+\\])?$"
    }
}
