{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "lib": ["es2018"],
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "typeRoots": ["./node_modules/@types"],
        "paths": {
            "@aligent/bigcommerce-graphql-module": ["./packages/modules/bigcommerce/src/index"],
            "@aligent/bigcommerce-operations": [
                "./packages/generated/bigcommerce/operations/index"
            ],
            "@aligent/bigcommerce-resolvers": ["./packages/generated/bigcommerce/resolvers/index"],
            "@aligent/utils": ["./packages/utils/index"]
        }
    },
    "exclude": ["node_modules/**/*", "docker/**/*", "lambda/**/*"]
}
