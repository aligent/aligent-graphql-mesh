{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": {
    "packages": [
      "packages/mesh",
      "packages/modules/*"
    ]
  },
  "_moduleAliases": {
    "@aligent/bigcommerce-graphql-module": "./packages/modules/bigcommerce/src/index",
    "@aligent/bigcommerce-operations": "./packages/generated/bigcommerce/operations/index",
    "@aligent/bigcommerce-resolvers": "./packages/generated/bigcommerce/resolvers/index",
    "@aligent/utils": "./packages/utils/index"
  },
  "scripts": {
    "dev": "yarn start:dev",
    "start:dev": "yarn codegen && STAGE=dev mesh dev --dir ./packages/mesh",
    "start": "mesh start --dir ./packages/mesh",
    "codegen": "env $(cat ./packages/mesh/.env | sed '/^#/d' | xargs) graphql-codegen --config ./codegen.ts",
    "build": "mesh build --throwOnInvalidConfiguration --dir ./packages/mesh && yarn codegen",
    "build:docker": "docker build --no-cache -f docker/Dockerfile -t mesh .",
    "test": "jest --coverage --passWithNoTests",
    "lint": "eslint --color . --ext .ts",
    "lint:fix": "eslint --color --fix . --ext .ts",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "check-types": "tsc --pretty --noEmit"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-hive/cli": "^0.27.1",
    "@graphql-mesh/cli": "^0.82.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.8.0",
    "jest": "^29.6.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@envelop/core": "^4.0.0",
    "@envelop/graphql-modules": "^5.0.0",
    "@envelop/sentry": "^6.0.0",
    "@graphql-mesh/cache-localforage": "^0.94.0",
    "@graphql-mesh/cache-redis": "^0.95.0",
    "@graphql-mesh/graphql": "^0.94.0",
    "@graphql-mesh/json-schema": "^0.95.1",
    "@graphql-mesh/merger-stitching": "^0.94.0",
    "@graphql-mesh/plugin-hive": "^0.95.2",
    "@graphql-mesh/runtime": "^0.94.0",
    "@graphql-mesh/transform-prefix": "^0.95.0",
    "@graphql-tools/load-files": "^7.0.0",
    "axios": "^1.4.0",
    "cors": "^2.8.5",
    "express": "^4.18.0",
    "graphql": "^16.7.0",
    "graphql-modules": "^2.2.0",
    "graphql-tag": "^2.12.0",
    "jsonwebtoken": "^9.0.0",
    "module-alias": "^2.2.3",
    "uuid": "^9.0.0"
  }
}
